# TestRail API Configuration
# ==================================================================

# TestRail instance URL (replace with your TestRail domain)
TESTRAIL_URL=https://your-domain.testrail.io

# TestRail authentication credentials
# Username is typically your email address
TESTRAIL_USERNAME=your-email@domain.com

# Password can be either your account password or API key
# For better security, use an API key instead of your password
TESTRAIL_PASSWORD=your-api-key-or-password

# TestRail Project Configuration
# ==================================================================

# Project ID where test cases will be extracted from/saved to
# You can find this in the URL when viewing your project in TestRail
TESTRAIL_PROJECT_ID=1

# Suite ID within the project (usually 1 for the main suite)
TESTRAIL_SUITE_ID=1

# Target section ID for saving new test cases
# If not specified, the first available section will be used
TARGET_SECTION_ID=1

# Jira API Configuration
# ==================================================================

# Jira instance URL (replace with your Jira domain)
JIRA_URL=https://your-domain.atlassian.net

# Jira authentication credentials
# Username is typically your email address
JIRA_USERNAME=your-email@domain.com

# Jira API token (NOT your password)
# Generate an API token from: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN=your-api-token

# Jira ticket ID to fetch details for (e.g., PROJ-123)
JIRA_TICKET_ID=PROJ-123
